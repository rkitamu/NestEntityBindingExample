<Window x:Class="NestEntityBindingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NestEntityBindingExample"
        xmlns:p="clr-namespace:NestEntityBindingExample.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.MainWindow_Title}" Height="550" Width="800"
        d:DataContext="{d:DesignInstance local:MainViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="{x:Static p:Resources.UserList_Header}" Grid.Column="0" FontWeight="Bold">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0"
                             ItemsSource="{Binding Users}"
                             SelectedItem="{Binding SelectedUser}"
                             DisplayMemberPath="Name"
                             Margin="5,5,5,0"/>

                    <Button Grid.Row="1"
                            Content="{x:Static p:Resources.AddButton_Content}" 
                            Command="{Binding AddUserCommand}" 
                            Margin="5,5,5,0" 
                            Padding="5"/>

                    <Button Grid.Row="2"
                            Content="{x:Static p:Resources.ResetButton_Content}" 
                            Command="{Binding ResetCommand}" 
                            Margin="5" 
                            Padding="5"/>
                </Grid>
            </GroupBox>

            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="{x:Static p:Resources.InputForm_Header}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Label Content="{x:Static p:Resources.Id_Label}"/>
                    <TextBox Text="{Binding SelectedUser.Id, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="#EEEEEE"/>
                    <Label Content="{x:Static p:Resources.Name_Label}" Margin="0,5,0,0"/>
                    <TextBox Text="{Binding SelectedUser.Name, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Content="{x:Static p:Resources.Description_Label}" Margin="0,5,0,0"/>
                    <TextBox Text="{Binding SelectedUser.Description, UpdateSourceTrigger=PropertyChanged}"
                             Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <GroupBox Grid.Row="1" Header="{x:Static p:Resources.RealTimeDisplay_Header}" Margin="0,20,0,0" FontWeight="Bold">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{x:Static p:Resources.DisplayId_Label}" FontWeight="Medium" Width="100"/>
                            <TextBlock Text="{Binding SelectedUser.Id}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="{x:Static p:Resources.DisplayName_Label}" FontWeight="Medium" Width="100"/>
                            <TextBlock Text="{Binding SelectedUser.Name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="{x:Static p:Resources.DisplayDescription_Label}" FontWeight="Medium" Width="100"/>
                            <TextBlock Text="{Binding SelectedUser.Description}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <Button Grid.Row="2"
                        Content="{x:Static p:Resources.DeleteButton_Content}"
                        Command="{Binding DeleteCommand}"
                        CommandParameter="{Binding SelectedUser}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,10,0,0"
                        Padding="20,5"
                        Background="#FFDADA"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>