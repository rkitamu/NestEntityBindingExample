<Window x:Class="NestEntityBindingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NestEntityBindingExample"
        mc:Ignorable="d"
        Title="NextEntityBindingExample" Height="450" Width="600"
        d:DataContext="{d:DesignInstance local:MainViewModel, IsDesignTimeCreatable=True}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="入力フォーム" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="ID"/>
            <TextBox Text="{Binding CurrentUser.Id, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Background="#EEEEEE"/>

            <Label Content="名前 (Name)" Margin="0,5,0,0"/>
            <TextBox Text="{Binding CurrentUser.Name, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="説明 (Description)" Margin="0,5,0,0"/>
            <TextBox Text="{Binding CurrentUser.Description, UpdateSourceTrigger=PropertyChanged}" 
                     Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <GroupBox Header="データバインディングによるリアルタイム表示" Grid.Row="1" Margin="0,20,0,0" FontWeight="Bold">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ID:" FontWeight="Medium" Width="100"/>
                    <TextBlock Text="{Binding CurrentUser.Id}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Name:" FontWeight="Medium" Width="100"/>
                    <TextBlock Text="{Binding CurrentUser.Name}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Description:" FontWeight="Medium" Width="100"/>
                    <TextBlock Text="{Binding CurrentUser.Description}" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>